extends layout

block body
  div.blog-masthead
    nav.navbar.navbar-dark.bg-inverse
      a.navbar-brand(href='#') My Blog
      ul.nav.navbar-nav
        li.nav-item.active
          a.nav-link(href='/') Home
            span.sr-only (current)
      ul.nav.navbar-nav.navbar-right(ng-hide='logined')
          li.nav-item
            a.nav-link(href='/signin') Signin
          li.nav-item
            a.nav-link(href='/regist') Regist
      ul.nav.navbar-nav.navbar-right(ng-controller='signoutCtrl', ng-show='logined')
        li.nav-item
          a.nav-link(ng-click='signOut()') Signout

  .container
    div(ng-view)
    hr
    footer
      .row
        .col-lg-12
          p Copyright Â© BLOGHUB 2014

